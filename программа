
#include <Servo.h>

#define step 40
#define LDR1 A0
#define LDR2 A2
int Spoint =  93;

Servo servo;

void setup() {
  Serial.begin(9600);
  servo.attach(2);
  servo.write(Spoint);
  delay(1000);
}

void loop() {
  int ldr1 = analogRead(LDR1);
  int ldr2 = analogRead(LDR2);

  int value1 = abs(ldr1 - ldr2);
  int value2 = abs(ldr2 - ldr1);

  if ((value1 <= step) || (value2 <= step)) {
    Spoint = 93;

  } else {
    if (ldr1 > ldr2) {
      if ((Spoint > 0) and (Spoint <= 180)) {
        Spoint = --Spoint;
      }
    }
    if (ldr1 < ldr2) {
      if ((Spoint >=  0) and (Spoint < 180)) {
        Spoint = ++Spoint;
      }
    }
  }
  Serial.println(Spoint);
  servo.write(Spoint);
  delay(30);
}
